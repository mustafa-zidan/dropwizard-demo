root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.java]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# trailing spaces in markdown indicate word wrap
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.csv]
max_line_length = 2147483647

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = false

[*.properties]
charset = utf-8

[{*.yml,*.yaml}]
indent_size = 2
indent_style = space
